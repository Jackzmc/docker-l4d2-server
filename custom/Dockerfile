ARG NAMESPACE=jackzmc
FROM $NAMESPACE/srcds-l4d2:base
COPY custom/overlay $SERVER_DIR/

# ENV LD_LIBRARY_PATH=.:bin:$LD_LIBRARY_PATH
ENV APPID=$APPID
ENV APPNAME=$APPNAME
ENV SERVER_DIR=$SERVER_DIR
ENV PATH="$PATH:$SERVER_DIR"

EXPOSE 27015/udp

WORKDIR $SERVER_DIR
ENTRYPOINT ["/bin/bash", "-c"]
CMD ["./srcds_run", "-game", "left4dead2"]
